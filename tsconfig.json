{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "strict": false,
    "esModuleInterop": false,
    "sourceMap": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["esnext.asynciterable", "es2020", "dom"],
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files": [
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}